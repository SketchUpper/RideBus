    <style name="AppTheme.Cyan">
        <item name="colorPrimary">#00bcd4</item>
        <item name="colorPrimaryDark">#008ba3</item>
        <item name="colorAccent">#c8e105</item>
        <item name="colorPrimaryLight">#62efff</item>
    </style>

    <style name="AppTheme.LightBlue">
        <item name="colorPrimary">#03a9f4</item>
        <item name="colorPrimaryDark">#007ac1</item>
        <item name="colorAccent">#fa5509</item>
        <item name="colorPrimaryLight">#67daff</item>
    </style>

    <style name="AppTheme.Blue">
        <item name="colorPrimary">#2196f3</item>
        <item name="colorPrimaryDark">#0069c0</item>
        <item name="colorAccent">#cd6310</item>
        <item name="colorPrimaryLight">#6ec6ff</item>
    </style>

    <style name="AppTheme.Indigo">
        <item name="colorPrimary">#3f51b5</item>
        <item name="colorPrimaryDark">#002984</item>
        <item name="colorAccent">#c9384f</item>
        <item name="colorPrimaryLight">#757de8</item>
    </style>

    <style name="AppTheme.DeepPurple">
        <item name="colorPrimary">#673ab7</item>
        <item name="colorPrimaryDark">#320b86</item>
        <item name="colorAccent">#2fad5c</item>
        <item name="colorPrimaryLight">#9a67ea</item>
    </style>

    <style name="AppTheme.Purple">
