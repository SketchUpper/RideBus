<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorTranslucent">#d2414141</item>
        <item name="windowBackground">#FFFFFF</item>
        <item name="colorLine">#CCCCCC</item>
        <item name="textColor">#000000</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorTranslucent">#d2ffffff</item>
        <item name="colorLine">#666666</item>
        <item name="windowBackground">?android:windowBackground</item>
        <item name="textColor">#FFFFFF</item>
        <item name="colorPrimaryLight">#484848</item>
    </style>

    <style name="AMOLED" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorTranslucent">#d2ffffff</item>
        <item name="colorLine">#666666</item>
        <item name="windowBackground">#000000</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="textColor">#FFFFFF</item>
        <item name="colorPrimaryLight">#000000</item>
    </style>

    <style name="AppTheme.Default">
        <item name="colorPrimary">#1565C0</item>
        <item name="colorPrimaryDark">#283593</item>
        <item name="colorAccent">#1565C0</item>
        <item name="colorPrimaryLight">#3387E2</item>
    </style>

    <style name="AppTheme.Red">
        <item name="colorPrimary">#F44336</item>
        <item name="colorPrimaryDark">#ba000d</item>
        <item name="colorAccent">#11c1ce</item>
        <item name="colorPrimaryLight">#ff7961</item>
    </style>

    <style name="AppTheme.Orange">
        <item name="colorPrimary">#ff9800</item>
        <item name="colorPrimaryDark">#c66900</item>
        <item name="colorAccent">#0068ff</item>
        <item name="colorPrimaryLight">#ffc947</item>
    </style>

    <style name="AppTheme.LightGreen">
        <item name="colorPrimary">#5181b8</item>
        <item name="colorPrimaryDark">#38618f</item>
        <item name="colorAccent">#5181b8</item>
        <item name="colorPrimaryLight">#83b0eb</item>
    </style>

    <style name="AppTheme.Green">
        <item name="colorPrimary">#af504c</item>
        <item name="colorPrimaryDark">#6B2D2B</item>
        <item name="colorAccent">#af504c</item>
        <item name="colorPrimaryLight">#e47f78</item>
    </style>

    <style name="AppTheme.Teal">
        <item name="colorPrimary">#009688</item>
        <item name="colorPrimaryDark">#00675b</item>
        <item name="colorAccent">#0480d5</item>
        <item name="colorPrimaryLight">#52c7b8</item>
