<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview_bookmarks"
    android:background="?android:selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="78dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_bookmark"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <com.github.ivbaranov.mli.MaterialLetterIcon
            android:id="@+id/route_tram_number"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            app:mli_shape_color="@color/colorPrimary"
            app:mli_letters_number="2"
            cardView:layout_constraintBottom_toBottomOf="parent"
            cardView:layout_constraintStart_toStartOf="parent"
            cardView:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="16dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/route_tram_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="88dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:singleLine="false"
            android:textColor="?android:textColorPrimary"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            cardView:layout_constraintStart_toEndOf="@+id/route_bus_number"
            cardView:layout_constraintTop_toTopOf="parent"
            tools:text="Title"
            android:layout_marginLeft="88dp"
            android:layout_marginRight="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="?colorLine"
            android:layout_marginLeft="72dp"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>