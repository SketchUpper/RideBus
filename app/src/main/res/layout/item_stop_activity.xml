<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="?android:selectableItemBackground">

        <ImageView
            android:id="@+id/color"
            android:layout_width="8dp"
            android:layout_height="71dp"
            android:background="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_routenumber_stopactivity_card"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/color"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="14" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="?colorLine"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/text_routenumber_stopactivity_card" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_routetitle_stopactivity_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:singleLine="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ll"
            app:layout_constraintStart_toEndOf="@+id/text_routenumber_stopactivity_card"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="пл. Примостовая - по кольцу" />

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_remainingtime_stopactivity_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="12h 12m"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_closesttime_stopactivity_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/text_remainingtime_stopactivity_card"
                    app:layout_constraintStart_toStartOf="@+id/text_remainingtime_stopactivity_card"
                    app:layout_constraintTop_toBottomOf="@+id/text_remainingtime_stopactivity_card"
                    tools:text="16:50" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="?colorLine"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>